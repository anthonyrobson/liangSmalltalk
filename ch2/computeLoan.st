annualInterestRate := Number readFrom: (UIManager default request: 'Enter annual interest rate:').years := Number readFrom: (UIManager default request: 'Enter number of years of loan:').amount := Number readFrom: (UIManager default request: 'Enter loan amount:').monthlyInterestRate := annualInterestRate / 1200.monthlyPayment := amount * monthlyInterestRate / (1 - (1 / (1 + monthlyInterestRate) raisedTo: (years * 12))).totalPayment := monthlyPayment * years * 12.Transcript	show: 'The monthly payment is ',	(monthlyPayment round: 2) printString; cr;	show: 'The total payment is ',	(totalPayment round: 2) printString; cr