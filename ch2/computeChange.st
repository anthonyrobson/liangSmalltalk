amount := Number readFrom: (UIManager default request: 'Enter an amount in double:').remainingAmount := (amount * 100) asInteger.dollars := remainingAmount // 100.remainingAmount := remainingAmount \\ 100.quarters := remainingAmount // 25.remainingAmount := remainingAmount \\ 25.dimes := remainingAmount // 10.remainingAmount := remainingAmount \\ 10.nickels := remainingAmount // 5.remainingAmount := remainingAmount \\ 5.pennies := remainingAmount.output := WriteStream on: String new.output << 'Your amount ' << amount asString << ' consists of'; cr.output tab.output << dollars asString << ' dollars'; cr.output tab.output << quarters asString << ' quarters'; cr.output tab.output << dimes asString << ' dimes'; cr.output tab.output << nickels asString << ' nickels'; cr.output tab.output << pennies asString << ' pennies'.UIManager default alert: output contents.