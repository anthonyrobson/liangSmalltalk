| mins days years remainingDays output |mins := Number readFrom: (UIManager default request: 'Enter the number of minutes:').days := mins // (60 * 24).years := days // 365.remainingDays := days \\ 365.output := WriteStream on: String new.output << mins asString.output << ' minutes are approximately '.output << years asString.output << ' years and '.output << remainingDays asString.output << ' days.'.UIManager default alert: output contents.