annualInterestRate := Number readFrom: (UIManager default request: 'Enter annual interest rate:').monthlyInterestRate := annualInterestRate / 1200.years := Number readFrom: (UIManager default request: 'Enter number of years of loan:').amount := Number readFrom: (UIManager default request: 'Enter loan amount:').monthlyPayment := amount * monthlyInterestRate / (1 - (1 / (1 + monthlyInterestRate raisedTo: (years * 12)))).totalPayment := monthlyPayment * years * 12.output := WriteStream on: String new.output nextPutAll: 'The monthly payment is '.output nextPutAll: (monthlyPayment round: 2) asString.output cr.output nextPutAll: 'The total payment is '.output nextPutAll: (totalPayment round: 2) asString.UIManager default alert: output contents.